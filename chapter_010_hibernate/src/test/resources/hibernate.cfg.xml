<?xml version="1.0" encoding="utf-8"?>
<hibernate-configuration xmlns="http://www.hibernate.org/xsd/orm/cfg">
    <session-factory>
        <property name="connection.url">jdbc:hsqldb:mem:carstore;sql.enforce_size=false</property>
        <property name="connection.driver_class">org.hsqldb.jdbcDriver</property>
        <property name="connection.username">sa</property>
        <property name="connection.password"></property>
        <property name="dialect">org.hibernate.dialect.HSQLDialect</property>
        <property name="show_sql">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping resource="ru/job4j/carstore/models/Body.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/models/Brand.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/models/Car.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/models/Engine.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/models/Image.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/models/Model.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/models/Order.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/models/Transmission.hbm.xml"/>
        <mapping resource="ru/job4j/carstore/models/User.hbm.xml"/>
    </session-factory>
</hibernate-configuration>