<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="ru.job4j.carstore.models">
    <class name="Order" table="orders">
        <id name="id" column="id">
            <generator class="identity"/>
        </id>
        <property name="description" column="description"/>
        <property name="price" column="price"/>
        <property name="sold" column="sold"/>
        <property name="date" column="date"/>
        <many-to-one name="user"
                     column="id_user"
                     class="ru.job4j.carstore.models.User"/>
        <many-to-one name="car"
                     column="id_car"
                     class="ru.job4j.carstore.models.Car"/>
        <bag name="images" table="images" inverse="true" lazy="true" fetch="select">
            <key>
                <column name="id_order" not-null="true"/>
            </key>
            <one-to-many class="ru.job4j.carstore.models.Image"/>
        </bag>
    </class>
</hibernate-mapping>